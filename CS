













using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows;
using System.Windows.Controls;
using System.Windows.Data;
using System.Windows.Documents;
using System.Windows.Input;
using System.Windows.Media;
using System.Windows.Media.Imaging;
using System.Windows.Navigation;
using System.Windows.Shapes;

namespace ISC4U_Space_Jam
{
    /// <summary>
    /// Interaction logic for MainWindow.xaml
    /// </summary>
    public partial class MainWindow : Window
    {

        public MainWindow()
        {
            InitializeComponent();
        }
        SpaceShip spaceship = new Spaceship(100);
        SpaceShip OtherSpaceship = new Spaceship(100);

        private void Window_keydown(object sender, KeyEventArgs e)
        {
            // testing one key
            if (e.Key == Key.Right)
            {
                spaceship.locationX++;
                Canvas.SetLeft(SpaceBoi, spaceship.locationX);
                this.Title = ("You work");
            }

            if (e.Key == Key.Left)

            {
                spaceship.locationX--;
                Canvas.SetLeft(SpaceBoi, spaceship.locationX);
                this.Title = ("You work");

            }

            if (e.Key == Key.Up)

            {
                spaceship.locationX--;
                Canvas.SetTop(SpaceBoi, spaceship.locationX);
                this.Title = ("You work");

            }

            if (e.Key == Key.Down)

            {
                spaceship.locationX++;
                Canvas.SetTop(SpaceBoi, spaceship.locationX);
                this.Title = ("You work");

            }








            if (e.Key == Key.D)
            {
                OtherSpaceship.locationX++;
                Canvas.SetLeft(OtherSpaceBoi, OtherSpaceship.locationX);
                this.Title = ("You work");
            }

            if (e.Key == Key.A)

            {
                OtherSpaceship.locationX--;
                Canvas.SetLeft(OtherSpaceBoi, OtherSpaceship.locationX);
                this.Title = ("You work");

            }

            if (e.Key == Key.W)

            {
                OtherSpaceship.locationX--;
                Canvas.SetTop(OtherSpaceBoi, OtherSpaceship.locationX);
                this.Title = ("You work");

            }

            if (e.Key == Key.S)

            {
                OtherSpaceship.locationX++;
                Canvas.SetTop(OtherSpaceBoi, OtherSpaceship.locationX);
                this.Title = ("You work");

            }


        }




    }
}

